<section id="contact" class="layout-home-contact">
   <div class="container">
      <div class="layout-home-contact__attn">
         <h4>
            <i class="icon-phone" aria-hidden="true"></i> Call 502-817-8175 to book your next visit, or send us a message below.
         </h4>

         <p>$375 per night, 2 night minimum plus taxes and fees.</p>
      </div>

      <div class="layout-home-contact__form">
         <form id="form-contact" class="contact-form">
            <noscript>
               <p><strong>JavaScript must be enabled to use this form.</strong></p>
            </noscript>

            <div class="contact-form-errors"></div>

            <input type="text" name="name" placeholder="Name" maxlength="200" required>
            <input type="email" name="email" placeholder="Email Address" maxlength="100" required>
            <input type="tel" name="phone" placeholder="Phone Number" maxlength="30">
            <textarea name="message" placeholder="Message" maxlength="10000" required></textarea>

            <button class="button" type="submit">
               Send Message &nbsp;<i class="icon-mail" aria-hidden="true"></i>
            </button>
         </form>
      </div>

      <div class="layout-home-contact__info">
         <div class="google-map">
         </div>
      </div>
   </div>
</section>
